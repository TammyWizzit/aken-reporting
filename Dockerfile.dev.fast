# Ultra-fast development Dockerfile - uses local binary
FROM alpine:latest

# Install runtime dependencies
RUN apk add --no-cache ca-certificates tzdata curl wget

# Set working directory
WORKDIR /root/

# Copy the pre-built binary (built locally)
COPY main .

# Make sure it's executable
RUN chmod +x ./main

# Expose port
EXPOSE 8090

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:8090/api/v2/health || exit 1

# Run the binary
CMD ["./main"]